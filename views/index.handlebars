<h1>Eat the Burger</h1>

<h2>Fresh Burgers</h2>
<ul>
    {{#each burger}}
        {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Devoured Burgers</h2>
<ul>
    {{#each burger}}
        {{#if devoured}}
            {{> burgers/devoured-block devoured=false}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="bur">Burger Name:</label>
        <input type="text" id="bur" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
</form>